{
    "defaultStacks": ["frontend"],
    "packages":{
        "onward":{
            "type":"autoscaling",
            "data":{
                "secondsToWait":1200,
                "healthcheckGrace":20,
                "warmupGrace":30,
                "bucket":"aws-frontend-artifacts",
                "publicReadAcl" : false
            }
        }

    },
    "recipes":{
        "default":{
            "depends" : ["artifactUpload", "deploy"]
        },
        "deploy":{
            "actionsBeforeApp": ["onward.deploy"]
        },
        "artifactUpload":{
            "actionsBeforeApp": ["onward.uploadArtifacts"]
        }
    }
}
